<h1>All List</h1>
<div class="cards">
  <% @lists.each do |list| %>
    <div class="card-trip">
    <img src="<%= list.movies.first.poster_url unless list.movies.empty?%>" />
    <div class="card-trip-infos">
      <div>
        <h2><%= link_to list.name, list_path(list) %></h2>
      </div>
    </div>
  </div>

  <% end %>
</div>
<%= link_to "Create a New List", new_list_path, class: "btn btn-primary" %>
